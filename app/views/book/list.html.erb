
<% if @books.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the current books in our system</p>
<ul id = "subjects">
   <% Subject.find_each do |c| %>
   <li><%= link_to c.name, :action => "show_subjects", :id => c.id %></li>
   <% end %>
</ul>
<table border="1"class="table table-bordered table-hover" >
	<thead>
	<tr>
		<th class = "text-center">title</th>
		<th class = "text-center">price($)</th>
		<th class = "text-center">subject</th>
		<th class = "text-center">description</th>
		<th colspan="3"></th>
	</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.price %></td>
			<td><%= book.subject_id %></td>
			<td><%= book.description %></td>
			<td><%= link_to 'Edit', {:action => 'edit', :id => book.id} %></td>
			<td><%= link_to "Delete", {:action => 'delete', :id => book.id},
	      :confirm => "Are you sure you want to delete this item?" %></td>
		</tr>
		<% end %>
	</tbody>
</table>




<% end %>
<p><%= link_to "Add new Book", {:action => 'new' }%></p>